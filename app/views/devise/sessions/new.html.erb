<div class="row h-100 auth">
  <div class="col d-flex justify-content-center align-items-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>Sign in</h2>
      <div class="mb-3">
        <%= f.label :email, :class => 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
      </div>
    
      <div class="mb-3">
        <%= f.label :password, :class => 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", :class => 'form-control' %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, :class => 'form-check-input' %>
          <%= f.label :remember_me, :class => 'form-label' %>
        </div>
      <% end %>
    
      <div class="mb-3">
        <%= f.submit "Sign in", :class => 'btn btn-block btn-primary' %>
      </div>
    
      <div class="mb-3">
        <div class="form-text text-muted fs-6" style="font-size: 12px">Don't have an account? <%= link_to "Sign Up", new_registration_path(resource_name) %></div>
        <div class="form-text text-muted fs-6" style="font-size: 12px">Forgot Password? <%= link_to "Click Here", new_password_path(resource_name) %></div>
      </div>
    <% end %>
  </div>
</div>



